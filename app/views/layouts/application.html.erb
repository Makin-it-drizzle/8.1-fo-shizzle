<!DOCTYPE html>
<html>
<head>
  <title>FoShizzle</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= link_to 'Home', '/' %> | Logged in as <%= current_user.name %> | <%= link_to 'Logout', '/logout' %> | <%= link_to 'Edit', '/edituser' %>
  <% else %>
    <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
  <% end %>
  <%= yield %>
  <%= javascript_include_tag 'application', async: true %>

</body>
</html>
